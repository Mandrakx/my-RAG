{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "turn",
    "speaker",
    "text"
  ],
  "properties": {
    "turn": {
      "type": "integer",
      "minimum": 0
    },
    "speaker": {
      "type": "string",
      "minLength": 1
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "timestamp_ms": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 0
    },
    "confidence": {
      "type": [
        "number",
        "null"
      ],
      "minimum": 0.0,
      "maximum": 1.0
    }
  },
  "additionalProperties": false
}