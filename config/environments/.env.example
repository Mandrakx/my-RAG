# Application Configuration
APP_NAME=RAG_Application
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT=100
API_TIMEOUT=30

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ragdb
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TTL=3600

# LLM Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TOP_P=0.9

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Store
VECTOR_STORE=chromadb
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=documents
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=your-index-name

# Document Processing
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,json,docx,csv
DOCUMENTS_PATH=./data/documents
PROCESSED_PATH=./data/processed

# Authentication
AUTH_ENABLED=true
AUTH_PROVIDER=local
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REDIRECT_URI=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# iOS App Configuration
IOS_API_ENDPOINT=https://api.your-domain.com
IOS_WEBSOCKET_ENDPOINT=wss://api.your-domain.com/ws
IOS_PUSH_ENABLED=false
IOS_PUSH_CERTIFICATE=

# Feature Flags
ENABLE_CHAT_HISTORY=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_EXPORT=true
ENABLE_SHARING=false
ENABLE_ANALYTICS=false

# External Services
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@your-domain.com

# Development
HOT_RELOAD=true
MOCK_LLM=false
SEED_DATA=true